extends layout

block content
  div(id='mainRecipePageDiv')
    div(id='recipeSearch')
      h2 Recipe Catalog
      ul
        li
          button(class='recipeButton' id='showAllRecipesButton') Show All Recipes  
      h4 Sort Recipe by Title:
      ul(id='recipeSearchOptions')
        li
          button(class='recipeButton' id='A_EButton') A - E
        li
          button(class='recipeButton' id='F_JButton') F - J
        li
          button(class='recipeButton' id='K_OButton') K - O
        li
          button(class='recipeButton' id='P_TButton') P - T
        li
          button(class='recipeButton' id='U_ZButton') U - Z
    div(id='recipeSearchFeed')
      div(id='showAllRecipes')
        div(class='recipeFeed')
          if allRecipes.length == 0
            h2 There are no Recipes
          else
            each val in allRecipes
              div(class='recipe')
                h3= val.title
                p= val.author
                ul
                  each subVal in val.main_ingredients
                    li= subVal
                if !Object.sub_ingredients
                  ul
                    each subVal in val.sub_ingredients
                      li= subVal
                p= val.instructions
                p= val.notes
              div(class='recipeDivide')
