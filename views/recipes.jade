extends layout

block content

  div(id='recipeSearch')
  h1='Recipe Catalog'
  h4='Search Recipe by Title'
    ul(id='recipeSearchOptions')
      li(onclick='A_E()')='A-E'
      li(onclick='F_J()')='F-J'
      li(onclick='K_O()')='K-O'
      li(onclick='P_T()')='P-T'
      li(onclick='U_Z()')='U-Z'
  div(id='recipeSearchFeed')
    div(id='recipesA_E')
      div(class='recipeFeed')
      each val in recipesA_E
        div(class='recipe')
          h3= val.title
          p= val.author
          ul
            each subVal in val.main_ingredients
              li= subVal
          if !Object.sub_ingredients
            ul
              each subVal in val.sub_ingredients
                li= subVal
          p= val.instructions
          p= val.notes
