extends layout

block content
  div(id='indexPageBody')
    div(id='recipeFeed')
      each val in recipes
        button(type='button' class='collapsible')= val.title
          span(id='recipeDelete' class='material-icons' style="display: none;") delete
        div(class='content')
          p= `Author: ${val.author}`
          ul
            each subVal in val.main_ingredients
              li= subVal
          if !Object.sub_ingredients
            ul
              each subVal in val.sub_ingredients
                li= subVal
          p= val.instructions
          p= val.notes

  script(src='javascripts/index.js')
        
    
